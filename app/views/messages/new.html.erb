  </div>

  <%= render 'form' %>
  <div class="panel panel-default" id="messages">
    <div class="panel-body">
      <ul class="media-list">
        <%= render @messages %>
      </ul>
    </div>
  </div>
<% else %>
  <%= render 'привіт' %>
<% end %>